module validation(Gt, out);
	input [6:0] Gt;
	output [3:0] out;
	
	begin
		if(Gt[0] == 1)
			out = 3'b001;
		
		else if(Gt[1] == 1)
			out = 3'b010;
		
		else if(Gt[2] == 1)
			out = 3'b011;
		
		else if(Gt[3] == 1)
			out = 3'b100;
		
		else if(Gt[4] == 1)
			out = 3'b101;
		
		else if(Gt[5] == 1)
			out = 3'b110;
		
		else if(Gt[6] == 1)
			out = 3'b111;
		
	end
	
endmodule
	